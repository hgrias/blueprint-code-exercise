generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Screener {
  id          String @id @unique
  name        String
  displayName String
  fullName    String
  disorder    String
}

model Domain {
  id           String      @id @unique
  name         String      @unique
  description  String?
  threshold    Int         @default(2)
  assessmentId String?
  assessment   Assessment? @relation(fields: [assessmentId], references: [id])
  questions    Question[]
}

model Assessment {
  id           String   @id @unique
  name         String?
  description  String?
  referenceUrl String?
  Domain       Domain[]
}

model Question {
  id       String @id @unique
  title    String
  domainId String
  domain   Domain @relation(fields: [domainId], references: [id])
}
